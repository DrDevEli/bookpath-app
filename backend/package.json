{
  "name": "bookpath-backend",
  "version": "1.0.0",
  "description": "BookPath Backend - API service for AI-enhanced book discovery platform",
  "type": "module",
  "main": "server.js",
  "homepage": "https://api.bookpath.eu",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:openlibrary": "node test-openlibrary.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "docs:lint": "redocly lint ./docs/openapi.yaml",
    "docs:build": "node -e \"console.log(JSON.stringify(require('yaml').parse(require('fs').readFileSync('docs/openapi.yaml','utf8'))))\" > docs/openapi.json",
    "docs:preview": "npx redoc-cli serve docs/openapi.yaml --watch",
    "docs:types": "npx -y openapi-typescript@latest docs/openapi.yaml -o ../shared/types/openapi.ts",
    "docs:client": "npx -y @openapitools/openapi-generator-cli@latest generate -g typescript-axios -i docs/openapi.yaml -o ../frontend/src/api-client --additional-properties=useSingleRequestParameter=true,withSeparateModelsAndApi=true,modelPropertyNaming=original",
    "check-ports": "node scripts/check-ports.js"
  },
  "dependencies": {
    "@redocly/cli": "^1.28.3",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "joi": "^17.13.3",
    "mongoose": "^7.0.3",
    "nodemailer": "^7.0.5",
    "openpgp": "^6.1.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "prom-client": "^15.1.3",
    "rate-limiter-flexible": "^7.1.1",
    "speakeasy": "^2.0.0",
    "stripe": "^18.4.0",
    "swagger-ui-express": "^4.6.3",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "yaml": "^2.4.5"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "babel-jest": "^29.5.0",
    "eslint": "^9.29.0",
    "jest": "^29.5.0",
    "nodemon": "^3.1.10",
    "prettier": "^2.8.7",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [
    "bookpath",
    "books",
    "ai",
    "api",
    "recommendation",
    "discovery",
    "backend"
  ]
}
